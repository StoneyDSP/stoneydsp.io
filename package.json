{
  "name": "stoneydsp.io",
  "version": "1.0.0",
  "description": "StoneyDSP Official Website",
  "main": "./public/index.html",
  "icon": "./public/favicon.ico",
  "author": "StoneyDSP <nathanjhood@googlemail.com>",
  "license": "MIT",
  "homepage": "https://github.com/StoneyDSP/stoneydsp.io#readme",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StoneyDSP/stoneydsp.io.git"
  },
  "bugs": {
    "url": "https://github.com/StoneyDSP/stoneydsp.io/issues"
  },
  "private": true,
  "preferGlobal": true,
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "npx serve",
    "build": "npx tsc",
    "rebuild": "yarn clean && yarn build",
    "lint-html": "yarn run eslint public/index.html",
    "lint": "yarn run eslint 'src/**/*.{js,jsx,ts,tsx,html}'",
    "tst:grp": "cypress run 'cypress/**/*.cy.ts'",
    "tst:e2e": "cypress run --e2e",
    "tst:cmp": "cypress run --component",
    "cy:open": "cypress open",
    "e2e": "cypress run --e2e",
    "clean": "rm -rvf src/main/main.js",
    "wipe": "yarn clean && rm -rvf node_modules"
  },
  "dependencies": {
    "typescript": "^4.9.5",
    "vercel": "^28.15.3"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.16.0",
    "@html-eslint/parser": "^0.16.0",
    "@testing-library/cypress": "^9.0.0",
    "@tsconfig/cypress": "^1.0.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.14.4",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "cypress": "^12.5.1",
    "eslint": "^8.33.0",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.20",
    "tslib": "^2.5.0"
  },
  "files": [
    "./public",
    "./src"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "parser": "@html-eslint/parser",
        "extends": [
          "plugin:@html-eslint/recommended"
        ]
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@html-eslint",
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "@html-eslint/indent": [
        "error",
        2
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
